{{> _nav}}
<div class="panel panel-default">

  <div class="row container" id="battle">
    <div class="row" id="background">
      <div class="col-md-6" id="player-left">
      </div>
      <div class="col-md-6" id="player-right">
      </div>
    </div>



  </div>

  <div class="row">
    <div class="col-md-6 actions-col">
      <div class="dropdown">
        <button id="fight-label"class="btn btn-default action-btn" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Fight
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" aria-labelledby="fight-label">
          <li>A Item</li>
          <li>Another Item</li>
          <li>A third item</li>
        </ul>

        <button class="btn btn-default action-btn" type="button" data-toggle="dropdown" aria-haspopup="true">
          Items
          <span class="caret"></span>
        </button>
      </div>
    </div>


  </div>

</div>


<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title" id="modalLabel">Choose your player!</h3>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <button class="modal-arrow modal-element" id="left-select">Left</button>
        <div class="modal-element" id="modal-image"></div>
        <button class="modal-arrow modal-element" id="right-select">Right</button>
      </div>
      <div class="modal-footer">
        <input type="text" id="modal-name">
        <button type="button" class="btn btn-primary" id="select-player">Choose</button>
      </div>
    </div>
  </div>
</div>


{{>_footer}}